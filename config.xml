<?xml version='1.0' encoding='utf-8'?>
<widget id="pl.edu.zut.wi.bo53704" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Oleksandr 53704</name>
    <description>Weather App</description>
    <author email="bo53704@zut.edu.pl" href="https://www.wi.zut.edu.pl">
        Oleksandr Bochkin
    </author>
    <content src="weather.html" />
    
    <!-- Разрешения для навигации -->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="data:*" />
    
    <!-- Настройки для Electron -->
    <platform name="electron">
        <icon src="res/electron/app-icon.png" />
        <preference name="ElectronSettingsFilePath" value="res/electron/settings.json" />
    </platform>
</widget>
